{
  "name": "yoffa",
  "description": "Yoffa Ghost Theme",
  "version": "4.2.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "type": "module",
  "author": {
    "name": "Bright Themes",
    "email": "hi@brightthemes.com",
    "url": "https://brightthemes.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Blog"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brightthemes/yoffa.git"
  },
  "scripts": {
    "dev": "vite build --watch & vite",
    "serve": "vite",
    "watch": "vite build --watch",
    "prebuild": "node theme.js",
    "build": "vite build",
    "preview": "vite preview",
    "test": "gscan . --verbose",
    "zip": "npm run build && npm run test && mkdir -p dist && zip -r dist/${npm_package_name} . -x 'dist*' 'demo*' 'node_modules*' '.*' 'TODO.md' 'private.hbs' 'theme.js'",
    "release": "npm version minor --no-git-tag-version && npm run zip && git add . && git commit -m \"v$(node -p 'require(\"./package.json\").version')\" && git push"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tryghost/content-api": "^1.12.0",
    "@vitejs/plugin-legacy": "^5.4.3",
    "alpinejs": "^3.14.9",
    "autoprefixer": "^10.4.21",
    "fitvids": "^2.1.1",
    "gscan": "^5.0.0",
    "postcss": "^8.5.6",
    "postcss-mixins": "^9.0.4",
    "tailwindcss": "^3.4.17",
    "tocbot": "^4.36.4",
    "vite": "^5.4.19"
  },
  "config": {
    "card_assets": true,
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 320
      },
      "m": {
        "width": 640
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1280
      },
      "xxl": {
        "width": 2000
      }
    },
    "custom": {
      "background_color": {
        "type": "color",
        "default": "#ffffff",
        "description": "Set the main background color"
      },
      "text_color": {
        "type": "color",
        "default": "#262626",
        "description": "Set the main text color"
      },
      "border_color": {
        "type": "color",
        "default": "#e6e6e6",
        "description": "Set the border color"
      },
      "font_headings": {
        "type": "select",
        "options": [
          "System",
          "Cinzel",
          "Heebo",
          "Inter",
          "Instrument Sans",
          "Instrument Serif",
          "Orbit",
          "Plus Jakarta Sans",
          "Prata",
          "Space Mono",
          "Sulphur Point"
        ],
        "default": "Orbit",
        "description": "Set the heading font (when the Ghost 'Heading font' is set to theme default)"
      },
      "font_body": {
        "type": "select",
        "options": [
          "System",
          "Cinzel",
          "Heebo",
          "Inter",
          "Instrument Sans",
          "Instrument Serif",
          "Orbit",
          "Plus Jakarta Sans",
          "Prata",
          "Space Mono",
          "Sulphur Point"
        ],
        "default": "Orbit",
        "description": "Set the body font (when the Ghost 'Body font' is set to theme default)"
      },
      "header_subscribe_button": {
        "type": "boolean",
        "default": true,
        "description": "Enable the 'Subscribe' button in the header"
      },
      "hero_headline": {
        "type": "text",
        "group": "homepage",
        "description": "Set the homepage hero headline (you can include HTML)"
      },
      "hero_subheading": {
        "type": "text",
        "group": "homepage",
        "description": "Set the homepage hero subheading (you can include HTML)"
      },
      "hero_cover_image_aspect_ratio": {
        "type": "select",
        "options": [
          "1/1",
          "16/9",
          "4/3",
          "3/4",
          "hidden"
        ],
        "default": "1/1",
        "group": "homepage",
        "description": "Set the site cover image aspect ratio for the hero section"
      }
    }
  }
}
