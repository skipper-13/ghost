{{!< default}}

{{!-- Tag hero --}}
{{#tag}}
  <section class="relative px-5 sm:px-6">
    <div class="max-w-xl mx-auto py-16 min-h-60 flex flex-col gap-4 items-center justify-center text-center">
      <h1 class="font-bold tracking-tight text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-typ">{{name}}</h1>
      {{#if description}}
        <p class="text-lg text-typ-tone">{{description}}</p>
      {{/if}}
    </div>
  </section>
{{/tag}}

{{!-- Secondary navigation --}}
{{> secondary-navigation }}

{{!-- Posts --}}
{{> post-feed }}

{{!-- Pagination --}}
<section class="px-5 sm:px-6 my-12">
  <div class="max-w-container mx-auto text-center text-sm font-medium text-typ-tone [&_a]:mx-3 [&_a]:font-semibold [&_a]:hover:text-typ">
    {{pagination}}
  </div>
</section>